{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "ES2024",

    "moduleResolution": "nodenext",
    "module": "nodenext",
    "outDir": "build",

    "lib": ["dom", "ES2024"],
    "types": ["jasmine"]
  },
  "include": ["src/**/*"]
}
